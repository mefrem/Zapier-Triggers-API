# Environment Configuration Example
# Copy this file to .env and update with your values

# Environment
ENVIRONMENT=dev

# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=default

# For LocalStack development
AWS_ENDPOINT_URL=http://localhost:4566
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test

# DynamoDB Tables
EVENTS_TABLE_NAME=zapier-triggers-api-events-dev
API_KEYS_TABLE_NAME=zapier-triggers-api-keys-dev
AUDIT_LOGS_TABLE_NAME=zapier-triggers-api-audit-logs-dev

# SQS Queues
EVENT_QUEUE_URL=http://localhost:4566/000000000000/zapier-triggers-events-dev
EVENT_DLQ_URL=http://localhost:4566/000000000000/zapier-triggers-events-dlq-dev

# Secrets Manager
API_KEY_SECRET_NAME=zapier-triggers-api-dev-api-keys

# Logging
LOG_LEVEL=DEBUG
POWERTOOLS_SERVICE_NAME=zapier-triggers-api

# API Configuration
API_VERSION=1.0.0
RATE_LIMIT_DEFAULT=1000

# Feature Flags
ENABLE_XRAY_TRACING=false
ENABLE_METRICS=true
